{
  "name": "@death-star/holocron",
  "version": "1.0.0",
  "private": true,
  "description": "Single Source of Truth: API Contract and Generated Types",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf ./src/generated",
    "pregenerate": "npm run clean && mkdir -p ./src/generated",
    "generate": "openapi-typescript openapi.yaml -o ./src/generated/api.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "openapi-typescript": "^7.4.3",
    "typescript": "^5.7.2"
  }
}