{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "cache": true,
      "outputs": ["src/generated/**"]
    },
    "@death-star/skywalker#build": {
      "dependsOn": [
        "@death-star/holocron#generate",
        "@death-star/millennium#build"
      ],
      "outputs": ["dist/**"]
    },
    "@death-star/skywalker#dev": {
      "dependsOn": [
        "@death-star/holocron#generate"
      ]
    }
  }
}